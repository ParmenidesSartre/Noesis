# ==========================================
# APPLICATION CONFIGURATION
# ==========================================

# Node Environment
NODE_ENV=development

# Application Port
PORT=3001

# API Prefix (all endpoints will be prefixed with this)
API_PREFIX=api/v1

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# Local Development - Single Database Instance
DATABASE_URL="postgresql://tuition_admin:dev_password_123@localhost:5432/tuition_centre_db?schema=public"

# AWS RDS Production - Primary Instance (Write Operations)
# DATABASE_URL="postgresql://username:password@rds-primary.xxxxxx.us-east-1.rds.amazonaws.com:5432/tuition_centre_db?schema=public&connection_limit=100&pool_timeout=30"

# AWS RDS Production - Read Replica (Read Operations - Optional)
# DATABASE_READ_REPLICA_URL="postgresql://username:password@rds-replica.xxxxxx.us-east-1.rds.amazonaws.com:5432/tuition_centre_db?schema=public&connection_limit=100&pool_timeout=30"

# ==========================================
# REDIS CONFIGURATION
# ==========================================

REDIS_HOST=localhost
REDIS_PORT=6379

# ==========================================
# JWT / AUTHENTICATION
# ==========================================

# JWT Secret (MUST BE 32+ CHARACTERS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters

# JWT Token Expiration
JWT_EXPIRATION=1d
JWT_REFRESH_EXPIRATION=7d

# ==========================================
# FRONTEND / CORS
# ==========================================

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Allowed origins (comma-separated, required in production)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ==========================================
# RATE LIMITING
# ==========================================

# Rate limit time-to-live in seconds
RATE_LIMIT_TTL=60

# Maximum requests per TTL
RATE_LIMIT_MAX=100

# ==========================================
# LOGGING
# ==========================================

# Log level: error | warn | info | http | verbose | debug | silly
LOG_LEVEL=info

# Enable file logs (optional, auto-enabled in production)
# ENABLE_FILE_LOGS=true

# ==========================================
# MONITORING (OPTIONAL)
# ==========================================

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
